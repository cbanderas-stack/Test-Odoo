<odoo>
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.teacher</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Profesores">
                    <field name="name"/>
                    <field name="speciality"/>
                    <field name="date_started"/>
                    <field name="salary"/>
                </tree>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form_inherit_profesor" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.profesor</field><!--Le pongo el nombre que yo quiera, ahora puse como referencia el "modelo.form(del que es el formulario).inherit(es heredable)"-->
        <field name="model">res.partner</field><!--Nombre técnico del modelo real, este modelo debe apuntar al modelo que estoy usando, como este es herencia apunto al res.partner, en el caso de los estduiantes yo lo creé, entonces apunta al módulo que creé -->
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="replace">
                <sheet string="Profesor">
                <separator string="Datos del Profesor"/>
                    <group>
                        <field name="is_teacher"/>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                    
                    <group>
                        <field name="speciality"/>
                        <field name="date_started"/>
                        <field name="salary"/>
                    </group>
                </sheet>
            </xpath>
        </field>
    </record>

</odoo>

<odoo>
    <!-- Hereda la vista base de contactos -->
    <record id="view_partner_form_inherit_profesor" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.profesor</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="is_teacher"/>
                <field name="speciality" modifiers="{'invisible': [('is_teacher','=',False)]}"/>
                <field name="date_started" modifiers="{'invisible': [('is_teacher','=',False)]}"/>
                <field name="salary" modifiers="{'invisible': [('is_teacher','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Vista lista solo para profesores -->
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.teacher</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Profesores">
                <field name="name"/>
                <field name="speciality"/>
                <field name="date_started"/>
                <field name="salary"/>
            </tree>
        </field>
    </record>
</odoo>
